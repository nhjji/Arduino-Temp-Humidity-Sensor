  // include libraries for RTC
#include <Wire.h>
#include <RTClib.h>       

  //declare all variables
int Month;
int Day;
int Year;
int Hour;
int Minute;
int Seconds;

  // create object for RTC
RTC_DS3231 myRTC;

void setup() {
  // call up serial monitor
Serial.begin(9600); 
  //start RTC
myRTC.begin();
  // set up date & time on RTC (Year, Month, Day, Hour, Minute, Seconds)
// myRTC.adjust(DateTime(2025, 8, 7, 23, 5, 30));
}

void loop() {

 // set the class equal to your object
DateTime now = myRTC.now();

 // set variables
Month = now.month();
Day = now.day();
Year = now.year();
Hour = now.hour();
Minute = now.minute();
Seconds = now.second();

  // test to see if date & time show accurately
Serial.print("Date: ");
Serial.print(Month);
Serial.print("/");
Serial.print(Day);
Serial.print("/");
Serial.println(Year);

Serial.print("Time: ");
Serial.print(Hour);
Serial.print(":");
Serial.print(Minute);
Serial.print(":");
Serial.println(Seconds);
delay(2000);

}
